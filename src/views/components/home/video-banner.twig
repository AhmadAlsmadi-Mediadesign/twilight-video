{# src/views/components/home/video-banner.twig #}
{% set video_url = settings.components['home.video-banner'].video_url
  | default('https://www.youtube.com/embed/VIDEO_ID?rel=0&autoplay=1&mute=1&loop=1&playlist=VIDEO_ID') %}

<section class="video-banner">
  <div class="video-container">
    <iframe
      src="{{ video_url }}"
      title="Video Banner"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen
      loading="lazy">
    </iframe>
  </div>
</section>
